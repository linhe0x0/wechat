{
  "name": "@sqrtthree/wechat",
  "version": "0.3.0",
  "description": "Wechat SDK",
  "main": "dist/index.js",
  "scripts": {
    "dev": "rimraf dist && tsc --watch",
    "prebuild": "npm run lint",
    "build": "rimraf dist && tsc",
    "type-check": "tsc --noEmit",
    "lint": "npm run type-check && eslint --ext ts ./src",
    "test": "jest --coverage --onlyChanged",
    "prepublishOnly": "npm run build"
  },
  "author": "sqrtthree <imsqrtthree@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=10"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": "npm run lint"
  },
  "dependencies": {
    "consola": "~2.15.0",
    "got": "~11.8.2",
    "lodash": "~4.17.20"
  },
  "devDependencies": {
    "@sqrtthree/eslint-config-ts": "~0.1.0",
    "@sqrtthree/prettier-config": "~2.0.1",
    "@sqrtthree/tsconfig": "~1.0.0",
    "@types/lodash": "~4.14.161",
    "@types/node": "~16.4.5",
    "eslint": "~7.31.0",
    "husky": "~4.3.0",
    "jest": "~27.0.6",
    "lint-staged": "~10.3.0",
    "prettier": "~2.3.2",
    "rimraf": "~3.0.2",
    "typescript": "~4.3.5"
  }
}
